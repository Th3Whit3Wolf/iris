{
	"name": "@iris/ui",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "tsc && vite build",
		"coverage": "vitest run --coverage",
		"check": "npm run check:types && npm run check:lint && npm run check:format",
		"check:format": "prettier  --loglevel warn --check \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
		"check:lint": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --ignore-path ../.gitignore",
		"check:types": "tsc --pretty --skipLibCheck --noEmit",
		"dev": "vite",
		"fix:lint": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ../.gitignore",
		"fix:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@emotion/react": "^11.9.0",
		"@emotion/styled": "^11.8.1",
		"@material-ui/core": "^4.12.4",
		"@mui/icons-material": "^5.6.2",
		"@mui/material": "^5.6.2",
		"axios": "^0.26.1",
		"color": "^4.2.3",
		"engine.io-client": "^6.2.2",
		"jest-canvas-mock": "^2.4.0",
		"prop-types": "^15.8.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-player": "^2.10.0",
		"react-router-dom": "^6.3.0",
		"socket.io-client": "^4.5.0"
	},
	"devDependencies": {
		"@nabla/vite-plugin-eslint": "^1.4.0",
		"@testing-library/dom": "^8.13.0",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^12.1.5",
		"@testing-library/react-hooks": "^8.0.0",
		"@testing-library/user-event": "^13.5.0",
		"@trivago/prettier-plugin-sort-imports": "^3.2.0",
		"@types/color": "^3.0.3",
		"@types/debug": "^4",
		"@types/node": "^17.0.41",
		"@types/prop-types": "^15.7.5",
		"@types/react": "^18.0.12",
		"@types/react-dom": "^18.0.5",
		"@typescript-eslint/eslint-plugin": "5.27.1",
		"@typescript-eslint/parser": "5.27.1",
		"@vitejs/plugin-react": "^1.3.2",
		"@vitest/ui": "0.12.9",
		"c8": "^7.11.3",
		"debug": "^4.3.4",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "^2.7.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"eslint-plugin-testing-library": "^5.5.1",
		"jsdom": "^19.0.0",
		"option-t": "^32.2.1",
		"prettier": "^2.7.1",
		"supports-color": "^9.2.2",
		"typescript": "^4.7.3",
		"vite": "^2.9.10",
		"vite-aliases": "^0.9.2",
		"vite-plugin-mkcert": "1.7.1",
		"vite-tsconfig-paths": "3.5.0",
		"vitest": "latest"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:import/recommended",
			"plugin:jsx-a11y/recommended",
			"plugin:react/recommended",
			"plugin:react/jsx-runtime",
			"plugin:react-hooks/recommended",
			"prettier"
		],
		"plugins": [
			"import",
			"@typescript-eslint"
		],
		"overrides": [
			{
				"files": [
					"**/__tests__/**/*.[jt]s?(x)",
					"**/?(*.)+(spec|test).[jt]s?(x)"
				],
				"extends": [
					"plugin:testing-library/react"
				]
			},
			{
				"files": [
					"**/*.ts?(x)"
				],
				"parser": "@typescript-eslint/parser",
				"parserOptions": {
					"project": "./tsconfig.json"
				},
				"rules": {
					"@typescript-eslint/switch-exhaustiveness-check": "warn",
					"@typescript-eslint/no-explicit-any": "warn"
				},
				"extends": [
					"plugin:@typescript-eslint/recommended",
					"plugin:import/typescript"
				]
			}
		],
		"rules": {
			"no-unused-vars": 1,
			"no-shadow": 1,
			"react/display-name": "off",
			"react/no-children-prop": "off",
			"react/react-in-jsx-scope": "off",
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn",
			"react/prop-types": "off"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"ignorePatterns": [
			"dist",
			"public"
		]
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "none",
		"endOfLine": "lf",
		"useTabs": true,
		"tabWidth": 2
	}
}
